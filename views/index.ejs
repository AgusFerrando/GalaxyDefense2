<%- include('head'); %> 
  <body>
    
    <%- include('header'); %> 
      <main class="imagen_fondo">
        <div class="logo_galaxy2">
          <img src="/images/LOGO.png" alt="" />
        </div>
  
      <aside>
        <div class="columna_izq">
          <div class="log_in">
            <h2>LOGIN</h2>
            <form class="formularioLogIn" name="logIn" id="logIn" method="POST" action="/users/login">
                <input type="text" placeholder="usuario" id="usename" name="username"/>
                <input type="password" placeholder="contraseña" id="password" name="password" />
                <input type="submit" id="btnLogIn" >A JUGAR!</button>
            </form>
          </div>
        </div>
      </aside>
  
      <aside>
        <div class="columna_rigth">
          <div class="sign_up">
            <h2>SIGN UP</h2>
            <form id="signUp" name="signUp" class="formularioSignUp" method="POST" action="/users/signup">
                <input type="text" placeholder="nombre" name="name" id="nombreSign" />
                <input type="text" placeholder="usuario" name="username" id="usuarioSign" />
                <input type="text" placeholder="correo" name="mail" id="correoSign" />
                <input type="password" placeholder="contraseña" name="password" id="passwordSign" />
                <input type="submit" value="INGRESAR" id="btnSignUp" />
            </form>
          </div>
        </div>
      </aside>
    </main>

    <%- include('footer'); %> 
    <script src="../javascripts/login.js" type="module"></script>
  </body>
</html>
